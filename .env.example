# GitHub Configuration
GITHUB_TOKEN=your_github_personal_access_token_here
GITHUB_OWNER=your_github_username_or_org

# Optional: GitHub Project Settings
GITHUB_DEFAULT_LABELS=true
GITHUB_PROJECT_COLUMNS=Backlog,Ready,In Progress,Review,Done

# Anthropic Claude API
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Optional: Claude API Settings
ANTHROPIC_MODEL=claude-3-5-sonnet-20241022
ANTHROPIC_MAX_TOKENS=8000
ANTHROPIC_TEMPERATURE=0.3

# Optional: Task Configuration
TASKS_MAX_COMPLEXITY=large
TASKS_TARGET_HOURS=3
TASKS_AI_READY_BY_DEFAULT=true

# Optional: Output Configuration
OUTPUT_VERBOSE=false
OUTPUT_LOG_FILE=./p2g.log
OUTPUT_DRY_RUN=false
